<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:background="@drawable/filter_item_bkg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.cyberwalkabout.common.widget.CustomFontTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/all_videos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            custom:typeface="DroidSansBold.ttf"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox_selector"/>

    </LinearLayout>

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/content"
        android:layout_alignTop="@id/content"/>

</RelativeLayout>
